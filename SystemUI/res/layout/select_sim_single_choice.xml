<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="72dip"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/sim_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dip" >
    </ImageView>

    <LinearLayout android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    <TextView
        android:id="@+id/sim_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="13dip"
        android:singleLine="true"
        android:textColor="@color/custom_text_color"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/sim_number"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginStart="13dip"
        android:singleLine="true"
        android:textColor="@color/custom_summary_color"
        android:textSize="15dp"
        android:visibility="gone" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:theme="@style/RadioColor"
        android:layout_marginEnd="13dip" />
</LinearLayout>